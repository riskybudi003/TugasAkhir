<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_photoprofile"
        android:layout_width="136dp"
        android:layout_height="126dp"
        android:src="@drawable/fotosayaaa"
        android:orientation="horizontal"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ed_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="Name"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_photoprofile" />

    <TextView
        android:id="@+id/ed_tahun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="2021"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_name" />

    <LinearLayout
        android:id="@+id/event_himti"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_marginTop="43dp"
        android:layout_marginHorizontal="19dp"
        android:background="@drawable/container20dpreadius"
        app:layout_constraintTop_toBottomOf="@+id/ed_tahun">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="111dp"
            android:layout_height="95dp"
            android:layout_marginTop="-4dp"
            android:src="@drawable/gambarjava"
            android:scaleType="centerCrop"
            android:background="@color/white"
            app:shapeAppearanceOverlay="@style/RoundedSquare"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bahasa Pemrograman"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/black"
                android:textSize="18sp"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>